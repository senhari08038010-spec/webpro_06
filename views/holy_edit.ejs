    <tr><td>５セット効果</td><td><textarea name="five_set" rows="13" cols="60"><%= data.five_set %></textarea></td></tr>
    <tr><td>おすすめキャラクター</td><td><textarea name="chara" rows="4" cols="60"><%= data.chara %></textarea></td></tr>

    </table>
    <input type="submit" values="登録">
    </form>
    <a href="/holy/<%= id %>">キャラクター詳細に戻る</a>
</body>
</html>

